<Window x:Class="ArrayListHW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArrayListHW"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Add" Content="add" HorizontalAlignment="Left" Height="42" Margin="67,241,0,0" VerticalAlignment="Top" Width="177" Click="Add_Click"/>
        <Button x:Name="Remove" Content="remove" HorizontalAlignment="Left" Height="42" Margin="288,241,0,0" VerticalAlignment="Top" Width="177" Click="Remove_Click"/>
        <Button x:Name="Show" Content="show all" HorizontalAlignment="Left" Height="42" Margin="516,241,0,0" VerticalAlignment="Top" Width="177" Click="Show_Click"/>
        <TextBox x:Name="txtData" HorizontalAlignment="Left" Height="34" Margin="134,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="439" FontSize="18" TextChanged="TxtData_TextChanged"/>

    </Grid>
</Window>
